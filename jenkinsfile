pipeline {
  agent any
  parameters {
        string(name: 'BRANCH', defaultValue: 'main', description: 'Branch do checkoutu')
  }

  
stages {
    stage('Checkout') {
        steps {
          git url: 'https://github.com/lukaszgolojuch/PlaywrightTests', branch: "$params.BRANCH"
        }
    }

    stage('Run Gradle Tests') {
      steps {
        echo "Running Gradle tests..."
        sh './gradlew test"'
      }
    }

  }
}  
