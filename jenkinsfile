pipeline {
  agent any
  stages {
    stage('Checkout') {
        steps {
            echo "Cloning test repository..."
            git branch: 'main', url: 'https://github.com/lukaszgolojuch/trainingSauceDemo'
        }
    }
    stage('Run Gradle Tests') {
      steps {
        echo "Running Gradle tests..."
        sh './gradlew test'
      }
    }
  }
}  
