pipeline {
  agent any
  stages {
    stage('Checkout') {
            steps {
                git url: 'https://github.com/lukaszgolojuch/PlaywrightTests', branch: "main"
            }
        }
    stage('Run Gradle Tests') {
      steps {
        echo "Running Gradle tests..."
        sh './gradlew test'
      }
    }
  }
}  
